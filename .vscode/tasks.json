{
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "make",
            "problemMatcher": [
                "$gcc"
            ],
        },
        {
            "label": "rebuild",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "command": "autoreconf --install && make clean && ./configure && make",
        },
        {
            "label": "first-time-build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "command": "autoreconf --install && ./configure && make",
        },
        {
            "label": "docker-qbdiff",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "command": "docker",
            "args": [
                "build",
                "--target=qbdiff",
                "--tag",
                "qbdiffx",
                "."
            ]
        },
        {
            "label": "docker-qbpatch",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "command": "docker",
            "args": [
                "build",
                "--target=qbpatch",
                "--tag",
                "qbpatchx",
                "."
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-fopenmp=libomp",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}