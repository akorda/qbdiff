{
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {}
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "make",
            "problemMatcher": [
                "$gcc"
            ],
        },
        {
            "label": "rebuild",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {}
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "make clean && ./configure && make",
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-fopenmp=libomp",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}